@{
  ViewData["Title"] = "Contacto";
  ViewData["HeaderPartial"] = "_HeaderNegro";
}
<div style="margin-top: 10%; "class="contact-page">
  <!-- Columna izquierda: información de contacto -->
  <div class="contact-info">
    <div class="info-item">
      <!-- icono teléfono (puedes cambiar por SVG propio) -->
      <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="black">
        <path d="M3 5a2 2 0 0 1 2-2h2.586a1 1 0 0 1 .707.293l2.121 2.121a1 1 0 0 1 .293.707V9a1 1 0 0 1-1 1H7.414l-1.707 1.707a10 10 0 0 0 6.586 6.586L13 14.586V12a1 1 0 0 1 1-1h2.879a1 1 0 0 1 .707.293l2.121 2.121A1 1 0 0 1 20 14.414V17a2 2 0 0 1-2 2h-1C8.268 19 3 13.732 3 7V5z"/>
      </svg>
      <span>484.324.2400</span>
    </div>
    <div class="info-item">
      <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="black">
        <path d="M2 4a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v16c0 1.103-.897 2-2 2H4a2 2 0 0 1-2-2V4zm2 0v.511l8 5.333 8-5.333V4H4zm16 2.689l-7.31 4.874a1 1 0 0 1-1.38 0L4 6.689V20h16V6.689z"/>
      </svg>
      <span>info@studioghibli.com</span>
    </div>
    <div class="info-item">
      <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="black">
        <path d="M12 2C8.134 2 5 5.134 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.866-3.134-7-7-7zm0 9a2 2 0 1 1 .001-3.999A2 2 0 0 1 12 11z"/>
      </svg>
      <span>15 West 3rd St.<br/>Media, PA 19063</span>
    </div>
  </div>

  <!-- Columna derecha: formulario -->
  <div class="contact-form">
    <form method="post" asp-action="ContactSubmit">
      <div class="form-row">
        <div class="form-group">
          <label for="FirstName">Nombre</label>
          <input type="text" id="FirstName" name="FirstName" placeholder="Nombre" required />
        </div>
        <div class="form-group">
          <label for="LastName">Apellidos</label>
          <input type="text" id="LastName" name="LastName" placeholder="Apellidos" required />
        </div>
      </div>

      <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" id="Email" name="Email" placeholder="ejemplo@dominio.com" required />
      </div>

      <div class="form-group">
        <label for="Phone">Teléfono (opcional)</label>
        <input type="tel" id="Phone" name="Phone" placeholder="xxx-xxx-xxxx" />
      </div>

      <div class="form-group">
        <label for="Message">Mensaje</label>
        <textarea id="Message" name="Message" rows="5" placeholder="Escribe tu mensaje..." required></textarea>
      </div>

      <button type="submit" class="btn-submit btn-custom-negro">Enviar</button>
    </form>
  </div>
</div>
